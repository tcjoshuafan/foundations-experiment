      p(class="text-center") center aligned text
      p(class="text-right") right aligned text 
      p(class="text-justify") justified text 

      //-FLOAT CLASSES
      div(class="callout clearfix")
        a(class="button float-left") Left 
        a(class="button float-right") Right 

      hr

